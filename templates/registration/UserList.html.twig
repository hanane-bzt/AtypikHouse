{% extends 'base.html.twig' %}

{% block title %}Les utilisateurs{% endblock %}

{% block body %}
    <p><a class="btn btn-primary btn-sm" href="{{ path('app_register') }}">Ajouter un utilisateur</a></p>
    <div class="row">
        {% for user in users %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ user.username }}</h5>
                        <p class="card-text">{{ user.email | default('') }}</p>
                        <p class="card-text">Rôles : {{ user.roles|join(', ') }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                    <a href="{{ path('user_edit', {id: user.id}) }}" class="btn btn-primary">Editer</a>
                            <form action="{{ path('user_delete', {'id': user.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
