<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    
    <!-- Ajoutez vos liens CSS et JavaScript ici -->

    <!-- Liens vers les ressources Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Lien vers votre favicon -->
    <link rel="icon" href="{{ asset('favicon.ico') }}">

    <!-- Liens vers vos fichiers CSS personnalisÃ©s -->
    {% block stylesheets %}
    {% endblock %}

    <!-- Bloc pour les scripts JavaScript -->
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body>
    <nav class="navbar bg-primary navbar-expand-lg" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('home') }}">AtypikHouse</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.attributes.get('_route') == 'home' %}active{% endif %}" href="{{ path('home') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% if app.request.attributes.get('_route') starts with 'habitat.' %}active{% endif %}" href="{{ path('admin.habitat.index') }}">Habitats</a>
                    </li>
                </ul>
            </div>
            <!-- Ajout du lien vers la page de profil -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link {% if app.request.attributes.get('_route') == 'profile' %}active{% endif %}" href="{{ path('profile') }}">Profil</a>
                </li>

            </ul>
        </div>
    </nav>

    <div class="container my-4  align-items-center" style="max-width: 900px;">
        {% include 'partials/flash.html.twig' %}
        
        {% block body %}{% endblock %}
    </div>
</body>
</html>
