{% extends 'admin/admin.html.twig' %}

{% block title %}Créer un nouvel habitat{% endblock %}

{% block body %}
   <h1>Créer un nouvel habitat</h1>
   {{ form_start(form) }}
       {{ form_row(form.title) }}
       {{ form_row(form.slug) }}
       {{ form_row(form.address) }}
       {{ form_row(form.ville) }}
       {{ form_row(form.category) }}
       {{ form_row(form.content) }}
       {{ form_row(form.capacity) }}
       {{ form_row(form.nombreDeCouchage) }}
       {{ form_row(form.price) }}
       {{ form_row(form.en_vente) }}
       {{ form_row(form.thumbnailFile) }}

       <div class="quantities">
           {{ form_label(form.quantities) }}
           {% for quantityForm in form.quantities %}
               {{ form_row(quantityForm) }}
           {% endfor %}
       </div>

       <button type="submit">Envoyer</button>
   {{ form_end(form) }}
{% endblock %}
